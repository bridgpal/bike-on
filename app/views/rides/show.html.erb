
<div class="row">
  <div class="columns">
      <h1><object data="../assets/bike.svg" type="image/svg+xml"></object> Bike On <small>Trip Detail</small> </h1>
      <hr>
      <h3>
        Max Speed: <%= @max_speed %><br>
        Altitude Change <%= @altitude_change %><br>

      <small>Speed</small>
      <div id="speed" style="height: 250px;"></div>

      <small>Altitude</small>
      <div id="altitude" style="height: 250px;"></div>

  </div>
</div>

<script>
new Morris.Area({
  element: 'speed',
  data:<%= @morris_data[1..-1].to_json.html_safe %>,
  xkey: ['time'],
  ykeys: ['speed'],
  labels: ['Speed'],
  pointSize: "0",
});

new Morris.Area({
  element: 'altitude',
  data:<%= @morris_data[1..-1].to_json.html_safe %>,
  xkey: ['time'],
  ykeys: ['altitude'],
  labels: ['Altitude'],
  pointSize: "0",
  lineColors: ['#da7000'],
});


</script>